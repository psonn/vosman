<%= form_for @plan do |f| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @plan.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Naam" %>
    <%= f.text_field :name, class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :product_type, "Productsoort" %><br>
    <%= f.select :product_type, options_for_select(%w[Maya Piano Presentatie]), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price, "Prijs" %>
    <%= f.number_field :price, :class => 'text_field', :step => 'any', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.button "Save plan", class: "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving plan..."} %>
  </div>
<% end %>